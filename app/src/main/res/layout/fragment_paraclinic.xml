<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Illness.Illnesses"
    android:gravity="center"
    android:layout_margin="30dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnNavar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_baackground"
            android:backgroundTint="#b8ff4056"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:alpha="0.9"
            android:text="نوار مغزی"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/btnCheshm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:alpha="0.9"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_baackground"
            android:backgroundTint="#b8ff4056"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="نوار عصب و عضله"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnDakheli"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_baackground"
            android:backgroundTint="#b8ff4056"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:layout_marginTop="10dp"
            android:shadowRadius="5"
            android:alpha="0.9"
            android:text="تست ورزش"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/btnOfuni"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_baackground"
            android:backgroundTint="#b8ff4056"
            android:shadowColor="#A8A8A8"
            android:layout_marginTop="10dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:alpha="0.9"
            android:text="VEP"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/btnFogh"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_baackground"
            android:backgroundTint="#b8ff4056"
            android:layout_marginTop="10dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:alpha="0.9"
            android:text="اکو"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/btnGhalb"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_baackground"
            android:backgroundTint="#b8ff4056"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_marginTop="10dp"
            android:alpha="0.9"
            android:text="رادیولوژی"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/btnNorology"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_baackground"
            android:backgroundTint="#b8ff4056"
            android:shadowColor="#A8A8A8"
            android:layout_marginTop="10dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:alpha="0.9"
            android:text="آندوسکوپی و کلونوسکوپی"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/btnCCU"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_baackground"
            android:backgroundTint="#b8ff4056"
            android:layout_marginTop="10dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:alpha="0.9"
            android:text="سی تی اسکن (ERCP)"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/btnICU"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_baackground"
            android:backgroundTint="#b8ff4056"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:layout_marginTop="10dp"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:alpha="0.9"
            android:text="آزمایشگاه"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            />
    </LinearLayout>
</ScrollView>